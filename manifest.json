{
  "name": "Autoscreenshotter",
  "version": "0.1",
  "description": "This app will make automated screenshots while you are browsing in its window.",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "content_scripts": [ 
    { "js": [ "screenshotter.DOM.js" ], "matches": [ "http://*/*", "https://*/*" ], "run_at": "document_end" }
  ],
  "background_page": "background.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}