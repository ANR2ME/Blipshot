{
  "name": "Blipshot",
  "version": "1.0",
  "description": "One-click screenshot tool. The screenshot is then draggable to your desktop.",
  "browser_action": {
    "default_icon": "icon/toolbar.png"
    //"popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "content_scripts": [ 
    { "js": [ "screenshotter.DOM.js" ], "matches": [ "http://*/*", "https://*/*" ], "run_at": "document_end" }
  ],
  "background_page": "background.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}