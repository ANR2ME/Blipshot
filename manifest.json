{
  "manifest_version": 2,


  // ********************************************************************** Extensions Details
  "name": "Blipshot â€” one click screenshots",
  "version": "1.0.5",
  "description": "Real fast and simple one-click full-page screenshots with drag and drop.",


  // ********************************************************************** Visual
  "browser_action": {
    "default_icon": "icon/toolbar.png"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },


  // ********************************************************************** Permissions
  "background": {
    "scripts": ["screenshotter.js", "actions.js"]
  },
  "content_scripts": [ 
    { "js": [ "screenshotter.DOM.js" ], "matches": [ "http://*/*", "https://*/*" ], "run_at": "document_end" }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}